{
  "extends": "@geno/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@db/*": [
        "src/db/*"
      ]
    },
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "module": "ES2015",
    "lib": [
      "ES2015"
    ],
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": [
    "src",
    "reset.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}